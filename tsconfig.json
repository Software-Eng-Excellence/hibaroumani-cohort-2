{
    "compilerOptions": {
        "target": "es6", //JavaScript Version to which TypeScript is to be compiled (recommended ES6)
        "module": "commonjs",
        "strict": true, //strict type definitions
        "types": [
            "node",
        ], //global import of /node_modules/@types/node libraries
        "baseUrl": "./src", //root directory (.ts)
        "outDir": "build", //folder to save compiled files (.js)
        "sourceMap": true,
        "esModuleInterop": true //Emit additional JavaScript to ease support for importing CommonJS modules
    },
    "include": [
        "src/**/*.ts"
    ], //always-compiled files. files inside src folder (and children folders) with ts extension
    "exclude": [
        "node_modules"
    ]
}